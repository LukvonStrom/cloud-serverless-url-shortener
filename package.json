{
  "name": "shortener",
  "version": "0.1.0",
  "bin": {
    "shortener": "bin/shortener.js"
  },
  "scripts": {
    "build": "tsc && npm run fixAssets",
    "watch": "tsc -w",
    "fixAssets": " find ./lib -name '*.html' -type f -exec cp --parents {} ./dist \\;",
    "test": "npm run fixAssets && jest --testRunner=jest-circus/runner",
    "testci": "npm run fixAssets && JEST_JUNIT_OUTPUT_DIR=artifacts jest --ci --testRunner=jest-circus/runner --reporters=default --reporters=jest-junit",
    "cdk": "cdk",
    "deploy": "cdk deploy '*' --require-approval 'never'",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "export CDK_APPROVAL='never'; cdk deploy --require-approval $CDK_APPROVAL '*'",
    "cdk:bootstrap": "cdk bootstrap aws://$(aws sts get-caller-identity | jq -r .Account)/eu-central-1",
    "cdklocal:start": "docker-compose up",
    "cdklocal:clear-cache": "(rm ~/.cdk/cache/accounts.json || true) && (rm ~/.cdk/cache/accounts_partitions.json || true)",
    "cdklocal:deploy": "npm run --silent cdklocal:clear-cache && CDK_LOCAL=true AWS_REGION=eu-central-1 cdklocal deploy --require-approval never '*'",
    "cdklocal:bootstrap": "npm run --silent cdklocal:clear-cache && CDK_LOCAL=true AWS_REGION=eu-central-1 cdklocal bootstrap aws://000000000000/eu-central-1",
    "ts-node": "ts-node",
    "generateDrawing": "cfn-dia d -t cdk.json -o output.drawio"
  },
  "devDependencies": {
    "@aws-cdk/assert": "^1.105.0",
    "@aws-cdk/aws-apigateway": "^1.105.0",
    "@aws-cdk/aws-apigatewayv2": "^1.105.0",
    "@aws-cdk/aws-apigatewayv2-integrations": "^1.105.0",
    "@aws-cdk/aws-dynamodb": "^1.105.0",
    "@aws-cdk/aws-lambda": "^1.105.0",
    "@aws-cdk/aws-lambda-nodejs": "^1.105.0",
    "@aws-cdk/aws-s3": "^1.105.0",
    "@aws-cdk/aws-s3-deployment": "^1.105.0",
    "@aws-cdk/core": "^1.105.0",
    "@aws-sdk/client-cloudformation": "^3.16.0",
    "@mhlabs/cfn-diagram-ci": "0.0.2",
    "@types/chai": "^4.2.18",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.3.0",
    "aws-cdk": "^1.105.0",
    "aws-cdk-local": "1.65.2",
    "chai": "^4.3.4",
    "esbuild": "^0.11.23",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.1",
    "jest-junit": "^12.1.0",
    "nock": "^13.0.11",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "~4.2.4"
  },
  "dependencies": {
    "@aws-cdk/aws-cloudfront": "^1.105.0",
    "@aws-cdk/aws-signer": "^1.105.0",
    "@aws-sdk/client-dynamodb": "^3.16.0",
    "@aws-sdk/client-s3": "^3.16.0",
    "@aws-sdk/node-http-handler": "^3.15.0",
    "@aws-sdk/util-dynamodb": "^3.16.0",
    "@types/aws-lambda": "^8.10.76",
    "source-map-support": "^0.5.19"
  }
}
